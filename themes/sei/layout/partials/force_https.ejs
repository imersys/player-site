<%
/**
 * Client-side solution for forcing redirect from HTTP to HTTPS.
 * Note: CloudFlare introduces server-side redirects.
 */
%>
<% if (config.force_https) { %>
<script>
  var host = window.location.protocol + '//' + window.location.hostname;
  if (window.location.protocol === 'http:' &&
      window.location.hostname === '<%- config.url %>') {
    window.location.href = 'https:' + window.location.href.substring(6);
  }
</script>
<% } %>
